<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Mapper 3.0//EN/" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.www.homedoc.dao.MemberDaoImpl"><!-- Class be looked -->

	
	
	<select id="memberLogin" parameterType="java.util.HashMap"
	resultType="com.www.homedoc.dto.MemberDto">
		select 
			*
		from
			member
		where 
			id = #{id}
			and
			pw = #{pw}
	</select> 
	
	<insert 
	id="insertMember"
	parameterType="java.util.HashMap">
		insert into member(
		id,
		pw,
		email,
		address,
		phone
		)values(
		#{id},
		#{pw},
		#{email},
		#{address},
		#{phone}
		)
	</insert>
	<select id="selectAllMember" 
	resultType="com.www.homedoc.dto.MemberDto">
		select
			*
		from
			member
	</select>
	
	<delete id="deleteAllMember">
		delete
			from
		member
	</delete>
	
	<update id="updateMember"  parameterType="java.util.HashMap">
		update
			member
		set
			pw = #{pw},
			email = #{email},
			address = #{address},
			phone = #{phone}
		where
			id = #{id}
	
	</update>
	

	


	
	
</mapper>