<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org//DTD Mapper 3.0//EN/" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.www.homedoc.dao.MemberDaoImpl"><!-- Class be looked -->

   
	<!--  CRUD 기본 SQL들 -->
	<insert 
	id="insert"
	parameterType="com.www.homedoc.dto.MemberDto">
		insert into member(
		id,
		pw,
		email,
		address,
		phone
		)values(
		#{id},
		#{pw},
		#{email},
		#{address},
		#{phone}
		)
	</insert>

	<update id="update"  parameterType="com.www.homedoc.dto.MemberDto">
		update
			member
		set
			pw = #{pw},
			email = #{email},
			address = #{address},
			phone = #{phone}
		where
			id = #{id}
	
	</update>
	
	<delete id="delete" parameterType="com.www.homedoc.dto.MemberDto">
		delete
			from
		member
			where
		no = #{no}
	</delete>
	
	
	<select id="selectAll" 
	resultType="com.www.homedoc.dto.MemberDto">
		select
			*
		from
			member
	</select>
	
		<select id="selectByNo" 
	resultType="com.www.homedoc.dto.MemberDto">
		select
			*
		from
			member
		where 
			no = #{no}
	</select>
	
		<delete id="deleteAll">
		delete
			from
		member
	</delete>
	
	
	
	
	<select id="memberLogin" parameterType="com.www.homedoc.dto.MemberDto"
	resultType="com.www.homedoc.dto.MemberDto">
		select 
			*
		from
			member
		where 
			id = #{id}
			and
			pw = #{pw}
	</select> 

	<!-- 끝 -->


	
	<select id="selectOneById" parameterType="com.www.homedoc.dto.MemberDto"
		resultType="com.www.homedoc.dto.MemberDto">
		select
			*
		from
			member
		where
			id = #{id}
	</select>
	
	<delete id="deleteAllMember">
		delete
			from
		member
	</delete>
	
	
	<select id="getAlert" parameterType="java.lang.String"
	resultType="com.www.homedoc.dto.AlertDto">
	
		select 
			boardreply.no as reply_no,
			board.title,
			board.no,
			boardreply.isalert,
			boardreply.writer
	   	from 
	   		board left outer join
	   	 boardreply on 
	   		boardreply.board_no = (select no from board where writer=#{wrtier})
	</select>
	
	<update id="changeIsAlertToTrue" parameterType="int">
		update
			boardreply
		set
			isalert = true
		where
			no = #{reply_no}
	</update>
	

	


	
	
</mapper>